{
    "version": 2,
    "builds": [
        {
            "src": "app.js",
            "use": "@now/node"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "app.js"
        }
    ],
    "crons": [
        {
          "path": "./api-calls/fetch",
          "schedule": "0 * * * *"
        },
        {
          "path": "./mailer/mail",
          "schedule": "0 */3 * * *"
        }
      ]
}